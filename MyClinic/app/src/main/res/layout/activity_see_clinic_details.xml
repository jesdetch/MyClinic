<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seeClinicDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/specificNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text=" ClinicName:"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/specificTelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Telephone:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/specificAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Address:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/specificInsurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Insurance Type:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/specificPaymentMethodTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Payment Method:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ListOfServicesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List of Offered Services"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/servicesListview"
            android:layout_width="match_parent"
            android:layout_height="142dp">

        </ListView>

        <TextView
            android:id="@+id/listofHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List of Working Hours"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/hoursListView"
            android:layout_width="match_parent"
            android:layout_height="149dp" />

        <Button
            android:id="@+id/BookAppointmentDutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment" />

        <Button
            android:id="@+id/checkInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Into Clinic" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>